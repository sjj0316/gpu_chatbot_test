services:
  backend:
    build: ./backend
    container_name: app-backend
    expose:
      - "8000"
    environment:
      - APP_ENV=dev
    restart: unless-stopped

  frontend:
    build:
      context: ./frontend
    container_name: app-frontend
    ports:
      - "80:80"
    depends_on:
      - backend
    volumes:
      - ./nginx/default.conf:/etc/nginx/conf.d/default.conf:ro
    restart: unless-stopped
